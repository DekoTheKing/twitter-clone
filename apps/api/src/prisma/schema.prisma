generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client" 
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  posts     Post[]
}

model Post {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())

  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
}
